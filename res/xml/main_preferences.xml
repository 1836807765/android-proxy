<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Add here selected AP -->

<ListPreference 
    android:key="pref_ap_selector"
    android:summary="select AP"
    android:title="select the AP to configure" />

    <com.lechucksoftware.proxy.proxysettings.preferences.ApSelectorDialogPreference
            android:enabled="true"
            android:key="preference_url_downloader"
            android:summary="@string/preference_test_proxy_urlretriever_summary"
            android:title="@string/preference_test_proxy_urlretriever_title" />

    <PreferenceScreen
        android:enabled="false"
        android:key="pref_key_proxy_settings_authentication_screen"
        android:summary="@string/preference_proxy_authentication_screen_summary"
        android:title="@string/preference_proxy_authentication_screen_title" >
        
        <CheckBoxPreference
            android:enabled="true"
            android:key="preference_authentication_enabled"
            android:summary="@string/preference_proxy_authentication_summary_disabled"
            android:title="@string/preference_proxy_authentication_title" />

        <EditTextPreference
            android:enabled="false"
            android:key="preference_authentication_user"
            android:summary="@string/preference_proxy_authentication_user_summary"
            android:title="@string/preference_proxy_authentication_user_title" />
        <EditTextPreference
            android:enabled="false"
            android:inputType="textPassword"
            android:key="preference_authentication_password"
            android:summary="@string/preference_proxy_authentication_password_summary"
            android:title="@string/preference_proxy_authentication_password_title" />
    </PreferenceScreen>

    <CheckBoxPreference
        android:enabled="true"
        android:key="preference_notification_enabled"
        android:summary="@string/preferences_statusbar_notification_description_enabled"
        android:title="@string/preferences_statusbar_notification_title" />

    <PreferenceCategory
        android:key="pref_key_proxy_settings_advanced"
        android:title="@string/pref_key_proxy_settings_advanced_title" >
        <PreferenceScreen
            android:key="pref_key_proxy_settings_advanced_prefscreen"
            android:persistent="false"
            android:summary="@string/pref_key_proxy_settings_advanced_prefscreen_description"
            android:title="@string/pref_key_proxy_settings_advanced_prefscreen_title" >
            <Preference
                android:enabled="true"
                android:key="preference_test_proxy_configuration"
                android:summary="@string/preference_test_proxy_configuration_summary"
                android:title="@string/preference_test_proxy_configuration_title" />

            <com.lechucksoftware.proxy.proxysettings.preferences.ValidationPreference
                android:key="validation_proxy_enabled"
                android:summary="@string/validation_proxy_summary_checking"
                android:title="@string/validation_proxy_enabled_title" />
            <com.lechucksoftware.proxy.proxysettings.preferences.ValidationPreference
                android:key="validation_proxy_valid_address"
                android:summary="@string/validation_proxy_summary_checking"
                android:title="@string/validation_proxy_address_title" />
            <com.lechucksoftware.proxy.proxysettings.preferences.ValidationPreference
                android:key="validation_proxy_reachable"
                android:summary="@string/validation_proxy_summary_checking"
                android:title="@string/validation_proxy_reachable_title" />
            <com.lechucksoftware.proxy.proxysettings.preferences.ValidationPreference
                android:key="validation_web_reachable"
                android:summary="@string/validation_proxy_summary_checking"
                android:title="@string/validation_proxy_web_reachable_title" />
        </PreferenceScreen>
        
        <com.lechucksoftware.proxy.proxysettings.preferences.UrlDownloaderDialogPreference
            android:enabled="true"
            android:key="preference_url_downloader"
            android:summary="@string/preference_test_proxy_urlretriever_summary"
            android:title="@string/preference_test_proxy_urlretriever_title" />

        <com.lechucksoftware.proxy.proxysettings.preferences.UrlBrowserDialogPreference
            android:enabled="true"
            android:key="preference_browser_intowebview"
            android:summary="@string/preference_test_proxy_webview_summary"
            android:title="@string/preference_test_proxy_webview_title" />

        <!-- <Preference -->
        <!-- android:enabled="true" -->
        <!-- android:key="preference_applications_feedback" -->
        <!-- android:summary="@string/preference_applications_feedback_summary" -->
        <!-- android:title="@string/preference_applications_feedback_title" /> -->

    </PreferenceCategory>
    <PreferenceCategory
        android:key="preference_about_category"
        android:title="@string/preference_about_title" >
        <Preference
            android:enabled="true"
            android:key="preference_help"
            android:title="@string/preference_help_title" />
        <Preference
            android:enabled="true"
            android:key="preference_about"
            android:summary="@string/versionName"
            android:title="@string/proxy_settings_about" />
    </PreferenceCategory>

</PreferenceScreen>