<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlt_main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list_item_app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Application icon"
            android:src="@drawable/ic_launcher" >
        </ImageView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/list_item_app_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="APP NAME"
                android:textSize="20dp" >
            </TextView>

            <TextView
                android:id="@+id/list_item_app_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="APP DESC"            
                android:textSize="12dp" >
            </TextView>
            
            <TextView
                android:id="@+id/list_item_app_version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="V 1.0"
                android:layout_marginBottom="20dp"
                android:textSize="12dp" >
            </TextView>

            <TextView
                android:id="@+id/list_item_app_submit_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Click to submit the application ..."
                android:textSize="12dp"
                android:textStyle="italic" >

            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>