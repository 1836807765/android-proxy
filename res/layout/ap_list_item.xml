<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item_ap_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

    <RelativeLayout
            android:id="@+id/status_container"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp">

        <View
                android:id="@+id/list_item_status_color"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/Holo_Blue_Light">
        </View>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                >

            <ImageView
                    android:id="@+id/list_item_ap_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Ap icon"
                    android:layout_gravity="center"
                    android:src="@drawable/wifi_signal">
            </ImageView>

            <TextView
                    android:id="@+id/list_item_ap_security"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_item_ap_icon"
                    android:layout_gravity="center"
                    android:text="WPA/WPA2"
                    android:textColor="@color/White"
                    android:textSize="10sp">
            </TextView>
        </LinearLayout>

    </RelativeLayout>

    <TextView
            android:id="@+id/list_item_ap_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_container"
            android:textStyle="bold"
            android:textSize="20sp"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:padding="3dp"
            android:text="AP NAME">
    </TextView>

    <TextView
            android:id="@+id/list_item_ap_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_container"
            android:layout_below="@id/list_item_ap_name"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:text="STATUS DESC"
            android:padding="3dp">
    </TextView>

</RelativeLayout>