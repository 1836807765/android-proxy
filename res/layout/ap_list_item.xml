    <TextView
            android:id="@+id/list_item_ap_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_item_status_color"
            android:layout_toLeftOf="@+id/list_item_ap_icon"
            android:textStyle="bold"
            android:textSize="18sp"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:text="AP NAME">
    </TextView>

    <TextView
            android:id="@+id/list_item_ap_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_item_status_color"
            android:layout_below="@id/list_item_ap_name"
            android:layout_toLeftOf="@+id/list_item_ap_icon"
            android:textSize="14sp"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:text="STATUS DESC">
    </TextView>

    <ImageView
            android:id="@+id/list_item_ap_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:contentDescription="Ap icon"
            android:src="@drawable/wifi_signal">
    </ImageView>

