<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res/com.lechucksoftware.proxy.proxysettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

        <RelativeLayout
                android:id="@+id/wifi_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/Holo_Blue_Dark"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

            <TextView
                    android:id="@+id/wifi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:singleLine="true"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@android:color/primary_text_dark"
                    android:paddingLeft="12dp"
                    android:paddingTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/wifi_signal"
                    android:text="WIFI sa f asdf asdfa sdfas dfasdfas dfasdf asdfasdf"/>

            <TextView
                    android:id="@+id/wifi_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wifi_name"
                    android:layout_toLeftOf="@+id/wifi_signal"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="10dp"
                    android:text="Connected asdf asdf sdf asdf asdf asdf asdf asdf asdf"/>

            <com.lechucksoftware.proxy.proxysettings.components.WifiSignal
                    android:id="@+id/wifi_signal"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <!--<LinearLayout-->
                    <!--android:id="@+id/available_actions"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@+id/wifi_signal"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:layout_marginRight="1dp"-->
                    <!--android:layout_marginBottom="1dp">-->

                <!--<TextView-->
                        <!--android:background="@color/Gray"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textSize="15sp"-->
                        <!--android:paddingBottom="10dp"-->
                        <!--android:paddingTop="0dp"-->
                        <!--android:paddingLeft="10dp"-->
                        <!--android:paddingRight="10dp"-->
                        <!--android:textColor="@android:color/primary_text_dark"-->
                        <!--android:text="..."/>-->
            <!--</LinearLayout>-->

        </RelativeLayout>

        <Switch
                android:id="@+id/wifi_proxy_switch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:textSize="18sp"
                android:text="@string/status_proxy_disabled"
                android:background="?android:attr/listChoiceBackgroundIndicator"
                />

        <Button
                android:id="@+id/proxy_selector"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="7"
                android:paddingRight="4dp"
                android:paddingLeft="12dp"
                android:layout_marginRight="0dp"
                android:text="Select a Proxy..."
                android:textSize="18sp"
                style="@android:style/Widget.Holo.Spinner" />

        <LinearLayout
                android:id="@+id/proxy_input_fields"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"

                >

            <com.lechucksoftware.proxy.proxysettings.components.InputField
                    android:id="@+id/proxy_host"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="12dp"
                    android:background="?android:attr/listChoiceBackgroundIndicator"
                    app:title="Host"
                    app:hint="@string/proxy_hostname_hint"
                    app:readonly="true"
                    app:fullsize="true"
                    app:singleLine="true"
                    app:value=""/>

            <include layout="@layout/separator"/>

            <com.lechucksoftware.proxy.proxysettings.components.InputField
                    android:id="@+id/proxy_port"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="12dp"
                    android:background="?android:attr/listChoiceBackgroundIndicator"
                    app:title="Port"
                    app:hint="@string/proxy_port_hint"
                    app:inputType="numeric"
                    app:readonly="true"
                    app:fullsize="true"
                    app:singleLine="true"
                    app:value=""/>

            <include layout="@layout/separator"/>

            <com.lechucksoftware.proxy.proxysettings.components.InputField
                    android:id="@+id/proxy_bypass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="12dp"
                    android:background="?android:attr/listChoiceBackgroundIndicator"
                    app:title="Bypass"
                    app:hint="@string/proxy_exclusionlist_hint"
                    app:readonly="true"
                    app:fullsize="true"
                    app:singleLine="true"
                    app:value=""/>

            <include layout="@layout/separator"/>

            <com.lechucksoftware.proxy.proxysettings.components.InputTags
                    android:id="@+id/proxy_tags"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="12dp"
                    android:background="?android:attr/listChoiceBackgroundIndicator"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:singleLine="true"
                    app:title="Tags"
                    app:fullsize="true"
                    app:readonly="true"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>