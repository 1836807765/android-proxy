<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.lechucksoftware.proxy.proxysettings"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="10dp"
              android:paddingBottom="10dp">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/field_title"
            android:visibility="visible"
            android:paddingBottom="4dp"
            android:text="TITLE"/>

    <LinearLayout
            android:id="@+id/bypass_container"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <com.lechucksoftware.proxy.proxysettings.components.InputField
                android:id="@+id/input_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/input_delete"
                app:hint="Add bypass address"
                app:fullsize="false"/>

    </LinearLayout>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/field_empty"
            android:visibility="visible"
            android:paddingBottom="4dp"
            android:textSize="18dp"
            android:textColor="@color/White"
            android:text="@string/not_set"/>

</LinearLayout>