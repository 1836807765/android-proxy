<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/wifi_ap_list_fragment"
    android:background="@color/MediumDarkGrey">

    <TextView
        android:textSize="14sp"
        android:id="@+id/wifi_ap_footer_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/num_wifi_access_points_configured"
        android:layout_centerInParent="true"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"/>

    <ProgressBar
        android:id="@+id/wifi_ap_footer_progress"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp">
    </ProgressBar>

</RelativeLayout>