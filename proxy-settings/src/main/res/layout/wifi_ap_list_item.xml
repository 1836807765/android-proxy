<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_ap_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/wifi_ap_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:lines="1"
        android:ellipsize="end"
        android:padding="3dp"
        android:text="AP NAME asdf asdf asdfas dfasdf asdf asdf asdf"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/wifi_ap_security">
    </TextView>

    <TextView
        android:id="@+id/wifi_ap_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEP/WPA2"
        android:gravity="center"
        android:textSize="9sp"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/wifi_ap_signal"
        android:layout_alignBottom="@+id/wifi_ap_signal"
        android:layout_alignTop="@+id/wifi_ap_signal"/>

    <ImageView
        android:id="@+id/wifi_ap_signal"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="Ap icon"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:src="@drawable/wifi_signal">
    </ImageView>

    <com.lechucksoftware.proxy.proxysettings.ui.components.WifiSignal
        android:id="@+id/wifi_signal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/wifi_ap_proxy_setting"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_action_proxy_dark"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/wifi_ap_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifi_ap_name"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="13sp"
        android:text="STATUS DESC"
        android:padding="3dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/wifi_ap_proxy_setting"
        android:layout_alignBottom="@+id/wifi_ap_proxy_setting"
        android:layout_alignTop="@+id/wifi_ap_proxy_setting"
        android:layout_alignParentLeft="true"/>


</RelativeLayout>