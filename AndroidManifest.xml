<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lechucksoftware.proxy.proxysettings"
    android:versionCode="5"
    android:versionName="1.4" > <!-- Remember to update also the strings.xml values -->

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".activities.ProxySettingsMainActivity"
            android:label="@string/app_name"
            android:theme="@style/Invisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lechucksoftware.proxy.proxysettings.activities.ProxySettingsCallerActivity"
            android:theme="@style/Invisible" >
        </activity>
        <activity
            android:name="com.lechucksoftware.proxy.proxysettings.activities.DisclaimerActivity"
            android:theme="@style/Invisible" >
        </activity>
        <activity android:name="com.lechucksoftware.proxy.proxysettings.activities.ProxyPreferencesActivity" >
            <intent-filter>
                <action android:name="com.lechucksoftware.proxy.proxysettings.UPDATE_PROXY"/>
            </intent-filter>
        </activity>
        <activity android:name="com.lechucksoftware.proxy.proxysettings.activities.ProxyPreferencesActivityV11" >
        </activity>
        <activity android:name=".activities.ApplicationsFeedbacksActivity" >
        </activity>

        <!-- Added activity to handle application uninstall. See the link for more informations. -->
        <!-- http://apachejava.blogspot.it/2011/04/install-and-uninstall-android.html -->

        <activity android:name=".UninstallerActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.DELETE" />
                <category android:name="com.lechucksoftware.proxy.proxysettings" />
                <!-- <category android:name="android.intent.category.DEFAULT" /> -->
                <data android:scheme="package" />
            </intent-filter>
        </activity>
        
        <service android:name="com.lechucksoftware.proxy.proxysettings.ProxySettingsCheckerService" >
        </service>
        

        <!-- Receiver that listen for Proxy Change broadcast intents -->
        <receiver android:name="com.lechucksoftware.proxy.proxysettings.ProxyChangeReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.PROXY_CHANGE" />
                <action android:name="com.lechucksoftware.proxy.proxysettings.UPDATE_NOTIFICATION"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>